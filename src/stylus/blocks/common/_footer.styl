#footer
	position relative
.footer-overlay
	background-color rgba(0,0,0,.20)
	position absolute
	top 0
	bottom 0
	left 0
	right 0
.footer
	display flex
	padding 60px 0 57px 0
	position relative
	flex-wrap wrap
	&__item:nth-child(4)
		padding-top 62px
	&__item
		&-text:nth-child(2)
			& a:nth-child(2)
				color $footertext
				border-bottom none
				transition .3s
				&:hover
					color $footertext - 20%
		&-text:nth-child(3)
			& a:nth-child(2)
				color $footertext
				border-bottom none
				transition .3s
				&:hover
					color $footertext - 20%
	&__item
		flex-basis 25%
		&-logo
			img
				width 198px
				margin-bottom 25px
		&-copy
			line-height 28px
			font-size 1.125rem
			color $footercopy
			margin-bottom 17px
			font-family $Light
		&-title
			line-height 34px
			font-size 1.375rem
			margin-bottom 28px
			font-family $Bold
			color $white
			display block
			&:nth-child(4)
				margin-top 47px
				margin-bottom 14px
			&:nth-child(6)
				margin-bottom 14px
		&-link
			line-height 28px
			font-size 1rem
			margin-bottom 5px
			display block
			font-family $Light
			color $footertext
			transition .3s
			&:hover
				color $footertext - 20%
		&-greenlink
			line-height 28px
			font-size 1rem
			margin-bottom 15px
			display block
			font-family $Regular
			span
				color $green
				border-bottom 1px solid $green
				transition .3s
				&:hover
					color $green - 20%
		&-separator
			margin 24px 0
			width 225px
			height 1px
			background-color #656565
		&-text
			font-family $Light
			font-size 1.125rem
			color $footertext
			line-height 28px
			display flex
			align-items center
			a
				margin-left 3px
				color $green
				border-bottom 1px solid $green
				transition .3s
				&:hover
					color $green - 20%
			i
				margin-right 5px
				font-size 11px
				background-color $green
				border-radius 3px
				color $black
				width 18px
				height 18px
				display inline-flex
				align-items center
				justify-content center
		&-icons
			margin-bottom 40px
			&-icon
				margin-right 10px
		&-images
			&-image
				display inline-block
				width 80px
				margin-right 10px
	.back-button
		width 65px
		height 65px
		border-radius 50%
		border 2px solid $green
		display flex
		align-items center
		justify-content center
		position absolute
		top -32.5px
		left 9px
		background-color $white
		transition .3s
		&:hover
			background-color $white - 20%
@media(max-width: 991px)
	.footer__item
		flex-basis 50%
		&:nth-child(3),
		&:nth-child(4)
			display none
		&:nth-child(4)
			padding-top 0
			margin-bottom 43px
		&-greenlink
			margin-bottom 0
		&-text
			&:nth-child(6)
				margin-bottom 46px
@media(max-width: 650px)
	.footer__item
		flex-basis 100%
