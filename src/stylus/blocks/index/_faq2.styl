.faq2-bg
	height 100%
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	background-color $white
.faq2
	padding 42px 0 79px
	display flex
	flex-wrap wrap
	justify-content space-between
	&__title
		text-align center
		font-family $SemiBold
		font-size 2rem
		line-height 38px
		color $white
		padding 0 15%
		margin-bottom 40px
		flex-basis 100%
	&__block
		flex-basis 50%
		&-li
			color $white
			font-family $Regular
			line-height 22px
			font-size 1.25rem
			position relative
			margin-bottom 17px
			padding-left 35px
			&:before
				content ''
				position absolute
				left 19px
				top 8.5px
				height 5px
				width 5px
				border-radius 50%
				background-color $green
				display inline-block
	&__separator
		background-color $green
		height 1px
		margin-bottom 43px
		flex-basis 100%
	&__button
		flex-basis 33%
		margin 0 auto
		padding 22px 32px
		font-family $Bold
		color $green
		font-size 1.5rem
		overflow hidden
		width 278px
		position relative
		line-height 19px
		display flex
		align-items center
		justify-content center
		border-radius 30px
		background-color #e3e3e3
		cursor pointer
		transition .3s
		border-bottom 3px solid $green
		&:hover
			box-shadow inset 0 0 15px #00ddb5
			color $white
			background-color $green
		&:after
			content: ""
			position: absolute
			top -50%
			left -50%
			right -50%
			bottom -50%
			background linear-gradient(to bottom,rgba(229,172,142,0),rgba(255,255,255,.7) 50%,rgba(229,172,142,0))
			transform rotateZ(60deg) translate(-5em,7.5em)
			opacity 0
			animation sheens 2.5s infinite
			z-index 100
@media(max-width: 1140px)
	.faq2
		padding 40px 0
@media(max-width: 767px)
	.faq2
		&__title
			padding 0
		&__block
			flex-basis 50%
			&-li
				padding-left 15px
				font-size 1rem
				margin-bottom 8px
				&:before
					left 0
		&__separator
			margin 24px 0 20px
		&__text
			flex-basis 100%
			margin-bottom 14px
		&__button
			flex-basis 100%
@media(max-width: 600px)
	.faq2
		&__block
			flex-basis 100%
