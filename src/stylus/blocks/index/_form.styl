.form-bg
	position absolute
	left 0
	right 0
	background linear-gradient(120deg, #5d5d5d, #272727)
	top 0
	bottom 0
.form
	position relative
	padding 69px 0 60px 0
	&__title
		width 100%
		position relative
		margin 0 auto 29px auto
		&-text
			line-height 36px
			font-family $SemiBold
			font-size 2.625rem
			color $white
			text-align center
			margin 0 auto
			position relative
	&__subtitle
		font-family $ExtraLight
		font-size 1.625rem
		color $white
		line-height 32px
		text-align center
		margin 0 auto
		margin-bottom 53px
		flex-basis 100%
	&__block
		display flex
		position relative
		&:nth-child(1)
			margin-bottom 43px
		&-price
			width 40%
			background-color #019379
			border-radius 3px
			color $white
			display flex
			align-items center
			justify-content center
			font-family $SemiBold
			font-size 3.875rem
			line-height 48px
			position absolute
			height 100%
			padding-bottom 10px
		&-title
			background-color $black
			color $white
			padding 17px 47px 25px 42%
			line-height 36px
			font-size 2rem
			border-radius 3px
			font-family $SemiBold
		&-text
			font-family $Light
			font-size 1.5rem
			line-height 32px
			color $white
			margin-top 30px
			width 100%
			text-align center
			span
				background-color $green
				padding 3px 8px
				border-radius 3px
				color $white
				margin-left 5px
@media(max-width: 991px)
	.form
		padding 30px 0
		&__block
			flex-wrap wrap
			&:nth-child(1)
				margin-bottom 21px
			&-price
				width 100%
				height 80px
				padding-top 10px
				padding-bottom 0
			&-title
				width 100%
				padding 95px 25px 15px 25px
				border-bottom-left-radius 3px
				font-size 1.25rem
				line-height 24px
			&-text
				flex-basis 100%
				width auto
				margin-bottom 18px
			&-form
				flex-basis 100%
				width auto
				&-input
					flex-basis 100%
					margin-right 0
					&:nth-child(1)
						order 1
						flex-basis calc(50% - 15px)
						margin-right 15px
					&:nth-child(3)
						order 2
						flex-basis 50%
				&-button
					order 3
					flex-basis 100%
					margin-bottom 15px
				&-policy
					order 4
					flex-basis 100%
					p, a, span
						font-size 1rem
					.checkbox-custom
						margin-right 0
@media(max-width: 767px)
	.form
		&__block
			&-form
				&-input
					&:nth-child(1)
						flex-basis 100%
						margin-right 0
					&:nth-child(3)
						flex-basis 100%
