.i3b1
	position absolute
	width 100%
	height 100%
	background url(/images/agsquare.png) #f0f0f0 100% 100%
	right 0
.info3
	display flex
	padding 63px 0 66px 0
	justify-content space-evenly
	flex-wrap wrap
	&__block:nth-child(1)
		border-right 1px solid
		border-color rgba(0,190,156,.25)
	&__block
		display grid
		grid-template-columns 15% 85%
		padding-right 10px
		flex-basis calc(50% - 10px)
		&-title
			font-family $SemiBold
			font-size 1.5rem
			color $text
			line-height 28px
			margin-bottom 13px
			grid-row 1 / 2
			grid-column 2 / 3
		&-text
			font-family $Light
			font-size 1.05rem
			color #333333
			opacity .9
			line-height 24px
			grid-row 2 / 3
			grid-column 2 / 3
			p
				display inline-block
			span:nth-child(2)
				margin 0 3px
				font-family $Bold
				color $green
		&-img
			margin-right 17px
			grid-row 1 / 3
			grid-column 1 / 2
@media(max-width: 991px)
	#info3
		display none
		border-top 3px dashed rgba(0,190,156,.3)
		border-bottom 3px dashed rgba(0,190,156,.3)
	.info3
		&__block
			grid-template-columns none
			flex-basis 100%
			&:nth-child(1)
				border-right none
				margin-bottom 30px
