#rates
	background-color #f0f0f0
.rates
	display flex
	padding 46px 0
	flex-wrap wrap
	position relative
	justify-content space-between
	&__slider
		width 100%
		.swiper-container
			overflow visible
		.swiper-pagination
			display none
			width 100%
			margin-top 20px
			.swiper-pagination-bullet
				border 2px solid #d1d1d1
				opacity 1
				margin 0 3px
				background inherit
				width 11px
				height 11px
				&-active
					background $green
					border-color $green
	&__title
		width 100%
		flex-basis 100%
		position relative
		margin 0 auto 29px auto
		&-text
			width 50%
			line-height 28px
			font-family $SemiBold
			font-size 2.625rem
			color $text
			text-align center
			margin 0 auto
			position relative
	&__subtitle
		font-family $ExtraLight
		font-size 1.625rem
		color $black
		line-height 32px
		text-align center
		margin 0 auto
		margin-bottom 30px
		flex-basis 100%
		& span
			margin-left 5px
			font-family $Bold
			font-size 2rem
			color $green
		& p
			display inline-block
	&__bottomtext
		font-family $SemiBold
		font-size 1rem
		color $footertext
		flex-basis 100%
		margin-top 30px
		text-align center
		line-height 32px
	&__block
		box-shadow 0 0 13.5px 1.5px rgba(0, 0, 0, 0.05)
		padding 16px 0 0
		flex-basis 30%
		height 100%
		transition .3s
		border-radius 5px
		background-color $white
		&:hover
			transform scale(1.05)
			box-shadow 0 0 13.5px 1.5px rgba(0, 0, 0, 0.1)
		&-title
			display flex
			font-family $SemiBold
			color $text
			font-size 2rem
			line-height 38px
			margin-left 35px
			margin-bottom 18px
			flex-wrap wrap
			position relative
			& p
				flex-basis 100%
			&-img
				position absolute
				top 0
				right 35px
			& span
				color $green
				font-family $SemiBold
				font-size 1.5rem
				line-height 38px
				flex-basis 100%
			&-text
				color $footertext
				font-family $SemiBold
				font-size 1rem
				line-height 24px
				flex-basis 100%
				& span
					color $green
					font-size 1rem
				& p
					display inline-block
		&-separator
			background-color $green
			height 1px
			margin 0 35px
		&-li
			margin 0 35px
			font-size 1.125rem
			font-family $Light
			line-height 24px
			color $darktext
			border-bottom 1px solid #e6e6e6
			padding 10px 0
			i
				color $green
			span
				&:nth-child(2)
					margin 0 3px 0 2px
					color $green
					font-family $SemiBold
		&-button
			background-color $green
			font-family $Bold
			font-size 1rem
			line-height 28px
			color $white
			display flex
			align-items center
			justify-content center
			border-radius 0 0 5px 5px
			padding 16px 0
			cursor pointer
			transition .3s
			&:hover
				background-color $green - 20%
		&:nth-child(3)
			.rates__block-li
				&:nth-child(7)
					border-bottom none
		&:nth-child(4)
			.rates__block-li
				&:nth-child(12)
					border-bottom none
		&:nth-child(5)
			.rates__block-li
				&:nth-child(9)
					border-bottom none
@media(max-width: 991px)
	.rates
		padding 64px 0
		&__block
			flex-basis 100%
			margin 20px 10px
		&__title
			&-text
				width 100%
				text-align center
				&-img
					left calc(50% - 65.5px)
		&__slider
			.swiper-container
				overflow hidden
			.swiper-pagination
				display block
